import telebot
import random
from telebot import types


bot = telebot.TeleBot("7237748405:AAFqxR5TnrdnwwK5bS_LLuSu-NI3Yk6MI0M")


with open("example.txt", "r", encoding="utf-8") as file:
    lyrics = file.readlines()
for i in range(len(lyrics)):
    lyrics[i] = lyrics[i].strip().split("!!")
b = []
for i in range(len(lyrics)):
    b.append(lyrics[i][0].upper())


@bot.message_handler(commands=['start'])
def start(message):
    markup = types.ReplyKeyboardMarkup(resize_keyboard=True)
    btn1 = types.KeyboardButton("Random WINX transformations")
    btn2 = types.KeyboardButton("Winxology")
    markup.add(btn1, btn2)
    bot.send_message(message.chat.id,
                     text="Hi!, {0.first_name}!".format(
                         message.from_user), reply_markup=markup)
@bot.message_handler(content_types=['text'])
