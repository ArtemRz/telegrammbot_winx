        if (message.text.upper() in b):
            markup = types.InlineKeyboardMarkup()
            a = 0
            for i in range(len(lyrics)):
                if message.text.upper() in lyrics[i][0].upper():
                    a = i
                    break
            markup.add(types.InlineKeyboardButton(lyrics[a][0], url=lyrics[a][1]))
            bot.reply_to(message, "Here it is...", reply_markup=markup)
        else:
            bot.send_message(message.chat.id, text="No idea...")


bot.polling(none_stop=True)
